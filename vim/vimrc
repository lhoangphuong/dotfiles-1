function! UpdateRemotePlugins(...)
    " Needed to refresh runtime files
    let &rtp=&rtp
    UpdateRemotePlugins
endfunction

call plug#begin()

"basic stuff
Plug 'wellle/targets.vim'
Plug 'tpope/vim-tbone'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-unimpaired'
Plug 'tpope/vim-eunuch'
Plug 'tpope/vim-sleuth'
Plug 'tpope/vim-vinegar'
Plug 'tpope/vim-dispatch'
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-sensible'
Plug 'tpope/vim-obsession'
Plug 'tpope/vim-rsi'
Plug 'tpope/vim-scriptease'
Plug 'jiangmiao/auto-pairs'
Plug 'machakann/vim-highlightedyank'


"git
Plug 'tpope/vim-fugitive'
Plug 'airblade/vim-gitgutter'

"lsp
Plug 'neoclide/coc.nvim', {'branch': 'release'}

"Airline
Plug 'vim-airline/vim-airline'

Plug 'gelguy/wilder.nvim', { 'do': function('UpdateRemotePlugins') }

Plug 'rafamadriz/friendly-snippets'


call plug#end()

packadd termdebug
packadd cfilter


let g:termdebug_config = {}
let g:termdebug_config['command'] = "lldb"
let g:termdebug_config['command_add_args'] = "pty"

set relativenumber
set number
set hlsearch
set background=dark
set clipboard+=unnamedplus

"nmap <C-s>  :update<CR>
nmap <space>co :copen<CR>
nmap <space>cc :ccl<CR>
nmap <space>cl :cli<CR>
nmap <space>lo :lopen<CR>
nmap <space>lc :lcl<CR>
nmap <space>ll :lli<CR>

nmap <space>p :Telescope git_files<CR>
nmap <space><space> :Telescope find_files<CR>
nmap <space>fb :Telescope buffers<CR>
nmap <space>sg :Telescope live_grep<CR>

let g:highlightedyank_highlight_duration = 200

source ~/dotfiles/vim/coc_setup.vim
source ~/dotfiles/nvim/plugin/monkey_term.lua
lua vim.o.winbar = '%m %f'

set laststatus=3
set cmdheight=0

hi Pmenu ctermbg=none ctermfg=white
hi SignColumn ctermbg=none
hi WinSeparator ctermbg=none

call wilder#setup({
      \ 'modes': [':', '/', '?'],
      \ 'next_key': '<Tab>',
      \ 'previous_key': '<S-Tab>',
      \ 'accept_key': '<Down>',
      \ 'reject_key': '<Up>',
      \ })
call wilder#set_option('renderer', wilder#popupmenu_renderer({
      \ 'highlighter': wilder#basic_highlighter(),
      \ }))
